<zk>
	<window apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('nc.noumea.mairie.kiosque.abs.viewModel.SoldeAgentViewModel')" height="100%">
		<div sclass="fond" height="100%">
			<vlayout>
				<label style="font-size: 28px;color: #EE7203;"
					value="Absences" />
				<label style="font-size: 18px;color: #004f9f;"
					value="Mes soldes" />
			</vlayout>
			<separator />
			<separator />
			<separator />
			<div sclass="conges">
				<div
					visible="@bind(vm.soldeCourant.afficheSoldeConge)">
					<div sclass="RHTitle2">
						<label value="Mon solde de congés annuel" />
					</div>
					<div sclass="RHTitle2Line"></div>
					<div sclass="RHContent right">
						<div>
							<label sclass="name"
								value="Solde année précédente" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeCongeAnneePrecToString)" />
						</div>
						<div>
							<label sclass="name"
								value="Solde année en cours" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeCongeAnneeToString)" />
						</div>
					</div>
				</div>
				<div
					visible="@bind(vm.soldeCourant.afficheSoldeRecup)">
					<div sclass="RHTitle2">
						<label value="Mon solde de récupérations" />
					</div>
					<div sclass="RHTitle2Line"></div>
					<div sclass="RHContent right">
						<div>
							<label sclass="name"
								value="Solde année en cours" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeRecupToString)" />
						</div>
					</div>
				</div>
				<div
					visible="@bind(vm.soldeCourant.afficheSoldeReposComp)">
					<div sclass="RHTitle2">
						<label value="Mon solde de repos compensateur" />
					</div>
					<div sclass="RHTitle2Line"></div>
					<div sclass="RHContent right">
						<div>
							<label sclass="name"
								value="Solde année précédente" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeReposCompAnneePrecToString)" />
						</div>
						<div>
							<label sclass="name"
								value="Solde année en cours" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeReposCompAnneeToString)" />
						</div>
					</div>
				</div>
				<div
					visible="@bind(vm.soldeCourant.afficheSoldeAsa)">
					<div sclass="RHTitle2">
						<label value="Mon solde ASA" />
					</div>
					<div sclass="RHTitle2Line"></div>
					<div sclass="RHContent right">
						<div visible="@bind(vm.soldeCourant.afficheSoldeAsaA48)">
							<label sclass="name"
								value="Réunion des membres du bureau directeur" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeAsaA48ToString)" />
						</div>
						<div visible="@bind(vm.soldeCourant.afficheSoldeAsaA54)">
							<label sclass="name"
								value="Congrès et conseil syndical" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeAsaA54ToString)" />
						</div>
						<div visible="@bind(vm.soldeCourant.afficheSoldeAsaA55)">
							<label sclass="name"
								value="Délégation (DP)" />
							<label sclass="value"
								value="@bind(vm.soldeCourant.soldeAsaA55ToString)" />
						</div>
					</div>
				</div>
			</div>
		</div>
		<include id="includeStyleSoldeAgent" src="/css/absences/soldeAgent.zul" />
	</window>
</zk>

